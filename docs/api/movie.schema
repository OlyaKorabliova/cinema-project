{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "required": true,
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "slugName": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "string",
      "required": false
    },
    "rating": {
      "type": "float",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "cast": {
      "type": "object",
      "required": false
    },
    "screenshots": {
      "type": "object",
      "required": false
    },
    "trailer": {
        "type": "string",
        "required": true
    },
    "genre": {
        "type": "string",
        "required": true
    },
    "schedule": {
        "type": "object",
        "required": false
    },
    "format": {
        "type": "object",
        "required": true
    },
    "technology": {
        "type": "object",
        "required": true
    },
    "duration": {
        "type": "object",
        "required": true,
        "keys": ["hour", "minute"]
    },
    "label": {
        "type": "string",
        "required": true,
        "possible": ["", "popular", "soon"]
    },
    "startDate": {
        "type": "object",
        "required": true,
        "keys": ["year", "month", "day"]
    },
    "published": {
        "type": "bool",
        "required": true
    }
  }
}